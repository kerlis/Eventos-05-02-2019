<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Elegirhoraa"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/encabezado2">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <include
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/encabezado"/>
        </RelativeLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_below="@+id/encabezado2"
        android:layout_width="match_parent">

        <RelativeLayout android:layout_width="match_parent"
            android:background="@color/verde"
            android:id="@+id/re"
            android:layout_height="55dp">

            <TextView
                android:id="@+id/usuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                 android:textAlignment="center"
                android:textColor="@color/blanco" />


            <TextView android:layout_width="match_parent"
                android:textAlignment="center"
                android:layout_below="@+id/usuario"
                android:layout_height="wrap_content"
                 android:textColor="@color/blanco"
                 android:text="RESERVAR CANCHAS">
            </TextView>
        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
            android:layout_below="@+id/re"
            android:id="@+id/topinfo"
            android:gravity="center"
            android:layout_height="110dp">

            <TextView android:layout_width="match_parent"
                android:layout_alignParentTop="true"
                android:layout_marginTop="5dp"
                android:id="@+id/local"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_height="21dp"/>

            <TextView android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/local"
                android:id="@+id/cancha"
                android:layout_marginBottom="5dp"
                android:layout_height="21dp"/>

            <TextView android:layout_width="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_below="@+id/cancha"
                android:id="@+id/distrito"
                android:layout_height="21dp"/>

        </RelativeLayout>





        <android.support.v7.widget.CardView
            android:layout_below="@+id/topinfo"
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="230dp">


            <com.prolificinteractive.materialcalendarview.MaterialCalendarView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:mcv_selectionColor="#00F"
                app:mcv_showOtherDates="all" />

        </android.support.v7.widget.CardView>

        <ScrollView android:layout_width="match_parent"
            android:layout_below="@+id/cardView"
            android:layout_height="wrap_content">
            <TableLayout
                android:layout_width="353dp"
                android:layout_below="@+id/cardView"
                android:layout_height="619dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/horario1"
                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_margin="2px"
                        android:layout_weight="1"
                        android:text="06:00 - 07:00" />

                    <Button
                        android:id="@+id/horario2"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:text="07:00 - 08:00" />

                    <Button
                        android:id="@+id/horario3"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="08:00-09:00" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <Button
                        android:id="@+id/horario4"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="09:00 - 10:00" />


                    <Button
                        android:id="@+id/horario5"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="10:00 - 11:00" />

                    <Button
                        android:id="@+id/horario6"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="11:00 - 12:00" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/horario7"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="12:00 - 13:00" />

                    <Button
                        android:id="@+id/horario8"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="13:00 - 14:00" />

                    <Button
                        android:id="@+id/horario9"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="14:00 - 15:00" />
                </TableRow>


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">



                    <Button
                        android:id="@+id/horario10"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="15:00 - 16:00" />

                    <Button
                        android:id="@+id/horario11"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="16:00 - 17:00" />

                    <Button
                        android:id="@+id/horario12"
                        android:layout_margin="2px"

                        android:layout_width="match_parent"
                        android:layout_height="59dp"
                        android:layout_weight="1"
                        android:text="17:00 - 18:00" />
                </TableRow>


            </TableLayout>

        </ScrollView>



    </RelativeLayout>

</RelativeLayout>



    <RelativeLayout android:layout_width="230dp"
        android:id="@+id/mDrawerBlock"
        android:layout_gravity="start"
        android:background="@color/blanco"
        android:choiceMode="singleChoice"
        android:divider="@android:color/darker_gray"
        android:layout_height="match_parent">
        <include
            android:id="@+id/ty"
            layout="@layout/list" />
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>